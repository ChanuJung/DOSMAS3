<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"

        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">


    <ImageButton
        
            android:layout_width="64dp"
        
            android:layout_height="64dp" app:srcCompat="@drawable/a_gps"
        
            android:id="@+id/main_imgBtn_gps" android:scaleType="centerCrop"
        
            app:layout_constraintStart_toStartOf="parent"
        
            android:layout_marginStart="8dp" android:layout_marginTop="16dp"
        
            app:layout_constraintTop_toTopOf="parent"
        
            app:layout_constraintEnd_toStartOf="@+id/main_editText_location"
        
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
        
            app:layout_constraintVertical_bias="0.0"
        
            android:background="#00000000" android:contentDescription="TODO"/>
    
    <EditText
        
            android:layout_width="289dp"
        
            android:layout_height="64dp"
        
            android:inputType="textPersonName"
        
            android:text="location"
        
            android:ems="10"
        
            android:id="@+id/main_editText_location"
        
            android:gravity="center" android:layout_marginTop="16dp"
        
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
        
            android:layout_marginEnd="4dp" app:layout_constraintStart_toEndOf="@+id/main_imgBtn_gps"
        
            android:layout_marginStart="5dp"
        
            android:layout_marginBottom="11dp" app:layout_constraintBottom_toBottomOf="parent"
        
            app:layout_constraintVertical_bias="0.0" android:textSize="20sp"/>

    <LinearLayout

            android:orientation="vertical"

            android:layout_width="368dp"

            android:layout_height="339dp" android:layout_marginTop="8dp"

            app:layout_constraintTop_toBottomOf="@+id/main_imgBtn_gps" app:layout_constraintStart_toStartOf="parent"

            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"

            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"

            android:id="@+id/linearLayout">

        <ImageButton

                android:layout_width="match_parent"

                android:layout_height="113dp" app:srcCompat="@drawable/a_beef"

                android:id="@+id/main_imgBtn_beef" android:scaleType="centerCrop"

                android:background="#00000000"/>

        <ImageButton

                android:layout_width="match_parent"

                android:layout_height="113dp" app:srcCompat="@drawable/a_chicken"

                android:id="@+id/main_imgBtn_chicken" android:scaleType="centerCrop"

                android:background="#00000000"/>

        <ImageButton

                android:layout_width="match_parent"

                android:layout_height="113dp" app:srcCompat="@drawable/a_mixed" android:id="@+id/main_imgBtn_mixed"

                android:scaleType="centerCrop"

                android:background="#00000000"/>

    </LinearLayout>

    <TextView

            android:text="전화하기"

            android:layout_width="0dp"

            android:layout_height="0dp"

            android:id="@+id/main_textView_call"

            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toStartOf="@+id/main_textView_shopList"

            app:layout_constraintStart_toStartOf="parent"

            android:gravity="center" android:textSize="24sp" android:textStyle="bold"/>

    <TextView

            android:text="장바구니"

            android:layout_width="0dp"

            android:layout_height="0dp"

            android:id="@+id/main_textView_shopList"

            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toEndOf="@+id/main_textView_call" app:layout_constraintEnd_toEndOf="parent"

            android:gravity="center" android:textSize="24sp" android:textStyle="bold"/>

</android.support.constraint.ConstraintLayout>